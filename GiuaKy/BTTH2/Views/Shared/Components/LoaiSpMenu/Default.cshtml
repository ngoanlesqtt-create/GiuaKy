@model IEnumerable<TLoaiSp>
<div class="col-lg-3">
    <div class="hero__categories">
        <div class="hero__categories__all">
            <i class="fa fa-bars"></i>
            <span>All departments</span>
        </div>
        <ul>
            @foreach(var item in Model)
            {
                var getUrl = "https://localhost:7018/api/productapi/"+item.MaLoai;
                <li><a style="cursor:pointer" onclick="showSanPhamByCategory('@getUrl')">@item.Loai</a></li>
            }
        </ul>
    </div>
</div>  
<script>
    function showSanPhamByCategory(getUrl) {
        var str = "";
        $.ajax({
            type:"GET",
            url: getUrl,
            dataType:"json",
            success: function (data) {
                $.each(data, function (key, val) {
                    str += '<div class="featured__item">';
                    str += ' <div class="featured__item__pic set-bg" data-setbg=\"';
                    var linkImage = "../Images/Images/" + $.trim(val.anhDaiDien);
                    str += linkImage;
                    str += '\" style="background-image: url(&quot;';
                    str += linkImage;
                    str+='&quot;)">';
                    str += ' <ul class="featured__item__pic__hover">';
                    str += '     <li><a href="#"><i class="fa fa-heart"></i></a></li>';
                    str += '           <li><a href="#"><i class="fa fa-retweet"></i></a></li>';
                    str += '            <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>';
                    str += '        </ul> </div>';
                    str += '<div class="featured__item__text">';
                    str += ' <h6><a href=\*/Home/ProductDetail/maSanPham=';
                    str += $.trim(val.tenSp);
                    str += '\">';
                    str += $.trim(val.tenSp);
                    str += '</a></h6><h5>';
                    str += val.giaNhoNhat.toString();
                    str += ' </h5></div> </div></div>';
                        
                   
                    //str += '<p>' + val.tenSp + '</p>'
                }),
                    $('#displayProducts').html(str);
            },
                Error: function(xhr) {
                    alert(xhr.responeText)
                }
        })
    }
</script>